<!DOCTYPE html>
<html>
  <head>
    <title>Wilks</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Francois+One|Lato:300|Oswald|Roboto|Roboto+Condensed|Work+Sans:700" rel="stylesheet">
    <script src="https://use.fontawesome.com/7f7a57d4d9.js"></script>
    <% if current_user %>
      <script>
        window.currentUser = {
          "id": "<%= current_user.id %>",
          "username": "<%= current_user.username %>",
          "email": "<%= current_user.email %>",
          "img_url": "<%= current_user.img_url %>",
          "teams": "<%= current_user.joined_teams.pluck(:team_id) %>"
        };
      </script>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
